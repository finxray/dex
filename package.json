{
  "name": "dex-quoter-testing",
  "version": "1.0.0",
  "description": "Testing suite for DEX quoters",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "hardhat test",
    "compile": "hardhat compile",
    "test:quoters": "hardhat test test/Quoters.test.js",
    "test:redstone": "FORK=1 HARDHAT_CONFIG=hardhat.redstone.v5.config.js npx hardhat test test/peripheral/quoters/real/RealDataBridge/StoixQuoter.fork.test.js --grep StoixQuoter",
    "test:stoix:dummy": "npx hardhat test test/peripheral/quoters/dummy/dummyDataBridge/StoixBridge.DummyQuoters.test.js test/peripheral/quoters/dummy/dummyDataBridge/StoixBridge.DummyQuoters.display.test.js",
    "deploy:local": "MAINNET_RPC=\"\" node scripts/restartAndDeploy.js",
    "node:start": "MAINNET_RPC=\"\" npx hardhat node",
    "node:stop": "node scripts/manageHardhatNode.js stop",
    "node:restart": "node scripts/manageHardhatNode.js restart"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@nomicfoundation/ignition-core": "^0.15.13",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@redstone-finance/evm-connector": "^0.9.0",
    "@redstone-finance/sdk": "^0.9.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.7",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "solc": "^0.8.30"
  }
}
